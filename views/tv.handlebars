  <div class="row">
    <div class="col-12">
      {{> header }}
      <form class="clearfix mb-4" action="POST">
        <div class="form-group">
          <label for="example-text" id="searchtext"><strong>SEARCH FOR TV A SHOW </strong></label>
          <input type="text" id="tvInput" class="form-control" aria-describedby="example-text" placeholder=" TV SHOW OR MOVIE">
